# Auto-detect text files and normalize line endings
* text=auto

# Force LF line endings for source code files
*.js     text eol=lf
*.jsx    text eol=lf
*.ts     text eol=lf
*.tsx    text eol=lf
*.json   text eol=lf
*.css    text eol=lf
*.scss   text eol=lf
*.html   text eol=lf

# Mark common binary files to avoid EOL conversion and diffs
*.png    binary
*.jpg    binary
*.jpeg   binary
*.gif    binary
*.ico    binary
*.woff   binary
*.woff2  binary
*.ttf    binary
*.eot    binary
*.pdf    binary

# Use union merge driver on package-lock.json to reduce conflicts
package-lock.json merge=union

# Don't generate diffs for minified files
*.min.js -diff
*.min.css -diff
